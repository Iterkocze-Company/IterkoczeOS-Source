NAME="xfce4-dev-tools"
DESC="The XFCE4 Development tools (xdt-autogen and xdt-source) required for building XFCE4 extentions"
SRC_URL="http://archive.xfce.org/src/xfce/xfce4-dev-tools/4.18/xfce4-dev-tools-4.18.0.tar.bz2"
DEPENDSON=""

BEGIN INSTALL
	tar xf xfce4-dev-tools-4.18.0.tar.bz2
	cd xfce4-dev-tools-4.18.0
	./configure --prefix=/usr/local
	make
	make install
END INSTALL

BEGIN REMOVE
	rm -v $LOCAL/bin/xdt-autogen
	rm -v $LOCAL/bin/xdt-csource
	rm -v $LOCAL/bin/xfce-build
	rm -v $LOCAL/bin/xfce-do-release
	rm -v $LOCAL/bin/xfce-get-release-notes
	rm -v $LOCAL/bin/xfce-get-translations
	rm -v $LOCAL/bin/xfce-update-news

	rm -v $LOCAL/share/aclocal/xdt-depends.m4
	rm -v $LOCAL/share/aclocal/xdt-features.m4
	rm -v $LOCAL/share/aclocal/xdt-i18n.m4
	rm -v $LOCAL/share/aclocal/xdt-version.m4

	rm -v $LOCAL/share/man/man1/xdt-csource.1
END REMOVE

