NAME="nano"
DESC="The GNU nani text editor"
SRC_URL="https://www.nano-editor.org/dist/v7/nano-7.2.tar.xz"
DEPENDSON=""

BEGIN INSTALL
	tar xf nano-7.2.tar.xz
	cd nano-7.2
	./configure --prefix=/usr/local --enable-utf8 --docdir=/usr/share/doc/nano --sysconfdir=/etc
	make -j$CORES
	make install-strip
	make clean
END INSTALL

BEGIN REMOVE
	rm -v /usr/local/bin/nano
	rm -v /usr/local/bin/rnano
	rm -v -rf /usr/local/share/nano
END REMOVE
